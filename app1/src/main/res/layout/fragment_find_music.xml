<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:scrollbars="vertical">

    <TextView

        android:id="@+id/fragment_find_music_tianqi_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="中国天气网" />

    <ListView
        android:id="@+id/fragment_find_music_tianqi_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fragment_find_music_tianqi_view"
        android:layout_below="@+id/fragment_find_music_tianqi_tv">

    </ListView>

    <View
        android:layout_alignParentBottom="true"
        android:id="@+id/fragment_find_music_tianqi_view"
        android:layout_width="match_parent"
        android:layout_height="60dp" />
</RelativeLayout>