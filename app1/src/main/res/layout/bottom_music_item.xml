<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/main_button_music_item_music_iocn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu_camera" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/main_button_music_item_music_iocn"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_button_music_item_music_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="haha1" />

        <TextView
            android:id="@+id/main_button_music_item_music_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/main_button_music_item_music_iocn"
            android:text="haha2" />

    </LinearLayout>


    <ImageView
        android:id="@+id/main_button_music_item_music_setting"
        android:src="@drawable/ic_menu_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        />

    <ImageView
        android:id="@+id/main_button_music_item_music_play"
        android:src="@drawable/ic_menu_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/main_button_music_item_music_setting"
        />

</RelativeLayout>